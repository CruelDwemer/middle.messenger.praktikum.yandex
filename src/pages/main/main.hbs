<div class="main-container">
    {{{ modal }}}
    <div class="main-paper">
        <div class="chats">
            <div class="chats-header">
                <div class="chats-profile">
                    {{{ profileButton }}}
                </div>
                <div class="chats-header-search">
                    {{{ searchInput }}}
                    {{{ searchButton }}}
                </div>
            </div>
            {{{ chatList }}}
            {{#if noResultsText}}
                <div>{{ noResultsText }}</div>
            {{/if}}
        </div>
        <div class="active">
            <div class="active-header">
                <div class="active-contact-name">{{ activeChatTitle }}</div>
                {{#if activeChatTitle}}
                    <div>{{{ deleteUser }}}</div>
                {{/if}}
            </div>
            <div class="active-chat-area">
                {{#each messages }}
                    {{> message text=this.content time=this.time name=this.user_id }}
                {{/each}}
            </div>
            <div class="active-bottom">
                <div>{{> attach width="40px" height="40px" }}</div>
                <div class="active-bottom-input-area">
                    {{{ messageInput }}}
                </div>
                <div class="active-bottom-send">
                    {{{ sendButton }}}
                </div>
            </div>
        </div>
    </div>
</div>
